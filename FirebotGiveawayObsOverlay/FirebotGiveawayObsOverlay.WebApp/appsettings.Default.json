{
  "AppSettings": {
    "FireBotFileFolder": "G:\\Giveaway",
    "Countdown": {
      "Minutes": 59,
      "Seconds": 59
    },
    "Layout": {
      "PrizeSectionWidthPercent": 75
    },
    "Fonts": {
      "PrizeFontSizeRem": 4.5,
      "TimerFontSizeRem": 3.0,
      "EntriesFontSizeRem": 3.0
    }
  },
  "TwitchSettings": {
    "Enabled": false,
    "AuthMode": "Simple",
    "Channel": "channelName",
    "ClientId": "your-client-id",
    "ClientSecret": "your-client-secret",
    "RedirectUri": "http://localhost:3000/auth/callback",
    "AccessToken": "",
    "RefreshToken": "",
    "TokenExpiration": "",
    "Scopes": [],
    "Commands": {
      "Join": "!join",
      "StartGiveaway": "!startgiveaway",
      "DrawWinner": "!drawwinner"
    },
    "RequireFollower": true,
    "FollowerMinimumAgeDays": 0
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
